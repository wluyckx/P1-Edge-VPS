# Copy to vps/.env before starting docker compose.

# Public DNS name used by Caddy for TLS cert issuance.
DOMAIN=api.example.com

# App/database auth.
POSTGRES_PASSWORD=change-me-strong-password
DEVICE_TOKENS=change-me-token:p1-main

# API runtime.
DATABASE_URL=postgresql+asyncpg://p1:${POSTGRES_PASSWORD}@postgres:5432/p1energy
REDIS_URL=redis://redis:6379/0
CACHE_TTL_S=5
